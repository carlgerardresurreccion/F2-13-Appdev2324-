<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment_PetDetails"
    android:background="@drawable/background_beige"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow_black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Details"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/avatarImage"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_home"
                android:layout_gravity="end"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/FragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ScrollView
            android:id="@+id/scrollviewnibeh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/top"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/PetProfile"
                    android:layout_width="350dp"
                    android:layout_height="255dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/PetName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/violet"
                        android:textSize="32sp"
                        android:fontFamily="@font/poppinsbold"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/PetGenderAndBreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#008080"
                        android:fontFamily="@font/poppinslight"
                        android:layout_gravity="end|top"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/PetAge"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"/>

                    <TextView
                        android:id="@+id/PetColor"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"/>

                    <TextView
                        android:id="@+id/PetWeight"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Arrived on"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Days at the shelter"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/PetDateArrived"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"/>

                    <TextView
                        android:id="@+id/PetDaysAtTheShelter"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppinssemibold"/>

                    <TextView
                        android:id="@+id/PetDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inout_box_petdetails"
                        android:textColor="@color/violet"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinslight"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/scrollviewnibeh"
            android:background="@drawable/button_violet"
            android:text="Apply for Adoption"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginBottom="15dp"/>
    </RelativeLayout>
</RelativeLayout>