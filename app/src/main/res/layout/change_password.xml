<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Settings_Privacy_ChangePassword"
    android:background="@drawable/background_lightteal"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow_black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center_horizontal"
                android:text="Letâ€™s change your password\nin the link sent to you."
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/rEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_box"
                android:drawableLeft="@drawable/icon_at"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="90dp"/>

            <Button
                android:id="@+id/Reset_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_teal"
                android:fontFamily="@font/poppinsregular"
                android:text="Send Link"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="350dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>