<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SkipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="346dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="31dp"
        android:clickable="true"
        android:fontFamily="@font/poppinssemibold"
        android:onClick="onTextViewClick"
        android:text="Skip"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="150dp"
        android:layout_height="162dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/righteousregular"
        android:text="Welcome to FurryFound!"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Logo" />

    <TextView
        android:id="@+id/TagLineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Where Tails Find Happy Endings"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeText" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="160dp"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="100dp">
    </androidx.viewpager.widget.ViewPager>

    <LinearLayout
        android:id="@+id/PageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/ViewPager"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--<Button
            android:id="@+id/startedButton"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:text="Let's Get Started"
            android:fontFamily="@font/poppinsbold"
            android:textSize="16sp"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:textAlignment="center"/>-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>