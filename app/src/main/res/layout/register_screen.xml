<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_LogIn"
    android:background="@drawable/background_beige"
    android:paddingRight="30dp"
    android:paddingLeft="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow_black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Create Account"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/poppinsregular"
                android:text="Just a few quick things\nto get started"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center_horizontal"/>

            <EditText
                android:id="@+id/RegisterEmailField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_box"
                android:drawableLeft="@drawable/icon_at"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/RegisterUsernameField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:background="@drawable/input_box"
                android:drawableLeft="@drawable/icon_at"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/RegisterPasswordField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:inputType="textPassword"
                android:background="@drawable/input_box"
                android:drawableLeft="@drawable/icon_password"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/RegisterFr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_teal"
                android:fontFamily="@font/poppinsregular"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:layout_marginTop="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Already have an account?"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/RegisterLoginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Log In"
                    android:textColor="@color/violet"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:clickable="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>