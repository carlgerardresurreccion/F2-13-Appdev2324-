<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_Home_ApplicationForm"
    android:background="@drawable/background_beige"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/topgreetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingRight="10dp"
                android:src="@drawable/back_arrow_black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppinsregular"
                android:text="Application Form"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/topgreetings">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center_horizontal"
                android:text="Please fill out this form"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/FullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_box"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsregular"
                android:hint="Full Name"
                android:paddingLeft="15dp"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_box"
                android:drawableLeft="@android:drawable/ic_dialog_map"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsregular"
                android:hint="Address"
                android:paddingLeft="15dp"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/phnum"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_box"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsregular"
                android:hint="Phone Number"
                android:paddingLeft="15dp"
                android:textColor="@color/grey"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/af_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailText"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_box"
                android:drawableLeft="@drawable/icon_at"
                android:paddingLeft="15dp"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:fontFamily="@font/poppinsregular"
                android:textSize="18sp"
                android:textColor="@color/grey"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmailText"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_box"
                android:drawableLeft="@android:drawable/btn_star_big_off"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsregular"
                android:hint="Reason for Adoption"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/grey"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/SendApplication"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_teal"
        android:fontFamily="@font/poppinsregular"
        android:text="Send Application"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_alignBottom="@+id/top"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>